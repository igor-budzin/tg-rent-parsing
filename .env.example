# Telegram API credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Telegram Bot token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram user IDs to receive notifications (comma-separated)
# Get your ID from @userinfobot
# IMPORTANT: Each user must start a chat with your bot first (send /start)
TELEGRAM_USER_IDS=123456789,987654321

# Channels to monitor (comma-separated, usernames without @)
CHANNELS_TO_WATCH=channel1,channel2,channel3

# Keywords to search for (comma-separated, case-insensitive)
KEYWORDS=keyword1,keyword2,keyword3

# Authentication method: "qr" (default) or "phone"
# QR: Scan QR code with Telegram app (Settings -> Devices -> Link Desktop Device)
# Phone: Enter phone number and receive SMS/Telegram code
AUTH_METHOD=qr

# Log level: error, warn, info, debug (optional, default: info)
LOG_LEVEL=info

# Check interval in milliseconds (optional, default: 60000)
CHECK_INTERVAL_MS=60000
